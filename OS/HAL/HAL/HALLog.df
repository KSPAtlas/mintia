#include "<df>/dragonfruit.h"

#include "<inc>/HALRTC.h"

var HALLogLastSource 0

fn HALLog { ... fmt src -- }
	if (src@ HALLogLastSource@ ~=)
		if (HALLogLastSource@)
			"\n" Printf
		end

		src@ HALLogLastSource!
	end

	auto curtime
	8 alloc curtime!

	curtime@ HALRTCQuery

	src@ curtime@@ "[%010d] %s: " Printf

	argv argc@ fmt@ VPrintf
end